spring.application.name=NarraterPro
app.version=0.0.1-SNAPSHOT

spring.datasource.url=jdbc:mysql://localhost:3306/narraterdb?createDatabaseIfNotExist=true
spring.datasource.username=root
spring.datasource.password=root
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver


# Para o JPA criar e atualizar as tabelas automaticamente com base nas suas entidades
spring.jpa.hibernate.ddl-auto=update
spring.jpa.database-platform=org.hibernate.dialect.MySQLDialect
# spring.jpa.show-sql=true

# Diz ao Hibernate para usar os nomes dos atributos Java exatamente como são, sem converter para snake_case.
spring.jpa.hibernate.naming.physical-strategy=org.hibernate.boot.model.naming.PhysicalNamingStrategyStandardImpl
